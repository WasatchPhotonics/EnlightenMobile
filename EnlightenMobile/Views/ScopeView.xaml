<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             xmlns:d="http://xamarin.com/schemas/2014/forms/design" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 

             x:Class="EnlightenMobile.Views.ScopeView"
             xmlns:vm="clr-namespace:EnlightenMobile.ViewModels"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms" 
             Title="{Binding title}"
             BackgroundColor="#333" >

    <ContentPage.BindingContext>
        <vm:ScopeViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <!-- This is the Grid whose structure changes when phone rotates 
             (consider making this a FlexLayout as well) -->
		<Grid x:Name="outerGrid" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            <!-- initialize to Portrait mode (1 col, 2 rows) -->
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
            <!-- Chart Block: Keep together (will be "left" in landscape mode) -->
            <StackLayout Grid.Row="0" Grid.Column="0" x:Name="stackChart" VerticalOptions="FillAndExpand">

                <!-- Page header (when in portrait mode) -->
                <Image x:Name="logoVertical" Source="enlightenLOGO" WidthRequest="300" BackgroundColor="#333" />

                <!-- the all-important spectral chart -->
                <microcharts:ChartView x:Name="chart" 
                                       Chart="{Binding chart}" 
                                       HorizontalOptions="FillAndExpand"
                                       VerticalOptions="FillAndExpand"/>

            </StackLayout>

            <!-- User Controls: keep together (will be "right" in landscape mode) -->
            <RefreshView Grid.Row="1" 
                         Grid.Column="0" 
                         x:Name="scrollOptions"
                         IsRefreshing="{Binding isRefreshing}"
                         Command="{Binding refreshCmd}">

                <ScrollView>
                    <StackLayout HorizontalOptions="FillAndExpand">

                        <!-- Page header if in landscape mode -->
                        <Image x:Name="logoHorizontal" WidthRequest="300" Source="enlightenLOGO" IsVisible="False"/>

                        <!-- Acquisition ProgressBar -->
                        <ProgressBar Progress="{Binding acquisitionProgress}" ProgressColor="#2994d3"/>

                        <!-- Command buttons -->
                        <StackLayout Orientation="Horizontal">
                            <Button Text="Acquire" Command="{Binding acquireCmd}" BackgroundColor="{Binding acquireButtonColor}" />
                            <Button Text="Save" Command="{Binding saveCmd}" />
                        </StackLayout>

                        <StackLayout HorizontalOptions="FillAndExpand" Padding="20, 10, 20, 10">
                            <FlexLayout JustifyContent="SpaceBetween">
                                <Label  Text="Fire Laser" MinimumWidthRequest="75" />
                                <Switch IsToggled="{Binding laserEnabled}" />
                            </FlexLayout>    
                            <FlexLayout JustifyContent="SpaceBetween">
                                <Label  Text="Dark" MinimumWidthRequest="75" />
                                <Switch IsToggled="{Binding darkEnabled}" />
                            </FlexLayout>    
                            <FlexLayout JustifyContent="SpaceBetween">
                                <Label  Text="Alternating" MinimumWidthRequest="75" />
                                <Switch IsToggled="{Binding alternatingEnabled}" />
                            </FlexLayout>    

                            <FlexLayout JustifyContent="SpaceBetween">
                                <Label Text="Integration Time (ms)" />
                                <Entry x:Name="entryIntegrationTimeMS"
                                       Text="{Binding integrationTimeMS}" 
                                       Placeholder="3" 
                                       Keyboard="Numeric" />
                            </FlexLayout>    
                            <FlexLayout JustifyContent="SpaceBetween">
                                <Label Text="Gain (dB)" />
                                <Entry x:Name="entryGainDb"
                                       Text="{Binding gainDb}" 
                                       Placeholder="24" 
                                       Keyboard="Numeric" />
                            </FlexLayout>    
                            <FlexLayout JustifyContent="SpaceBetween">
                                <Label Text="Scans to Average" />
                                <Entry x:Name="entryScansToAverage"
                                       Text="{Binding scansToAverage}" 
                                       Placeholder="1" 
                                       Keyboard="Numeric" />
                            </FlexLayout>    

                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                <Label Text="Note"/>
                                <Entry x:Name="entryNote"
                                       Text="{Binding note}" 
                                       Placeholder="your text here" 
                                       HorizontalOptions="FillAndExpand" />
                            </StackLayout>
                        </StackLayout>


                        <!-- Status Bar -->
                        <FlexLayout JustifyContent="SpaceBetween" BackgroundColor="#444" Padding="10">
                            <Label Text="{Binding spectrumMax}" />
                            <Label Text="{Binding batteryState, StringFormat='Batt: {0}'}" TextColor="{Binding batteryColor}" />
                        </FlexLayout>

                    </StackLayout>
                </ScrollView>
            </RefreshView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
